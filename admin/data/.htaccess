# CORS Headers per permettere l'accesso al JSON da qualsiasi dominio
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type"
Header set Content-Type "application/json"

# SECURITY: Block access to sensitive config files
<Files "email-config.json">
    Require all denied
</Files>

# Permetti accesso al file products.json (catalogo pubblico)
<Files "products.json">
    Require all granted
</Files>

# Cache control (opzionale)
<FilesMatch "\.json$">
    Header set Cache-Control "max-age=300, public"
</FilesMatch>
